<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="lead_form">

            <field name="name">lead_form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">

                  <xpath expr="//button[@string='Create Quotation']" position="attributes">
                     <attribute name="attrs">{'invisible': ['|', ('probability', '&lt;', 100), ('may_convert', '=', False)]}</attribute>
                 </xpath>

                 <xpath expr="//button[@string='Convert to Quotation']" position="attributes">
                     <attribute name="attrs">{'invisible': ['|', ('probability', '=', 100), ('may_convert', '=', False)]}</attribute>
                 </xpath>

                <field name="partner_id" position="attributes">
                    <attribute name="domain">[('is_company','=','True')]</attribute>
                    <attribute name="required">True</attribute>
                </field>

                <field name="user_id" position="attributes">
                    <attribute name="domain">[('section_id','!=','False')]</attribute>
                </field>

                 <field name="partner_id" position="after">
                    <field name="city" readonly="1"/>
                </field>

                <field name="priority" position="replace">
                    <field name="contact_name"/>
                </field>

                <field name="categ_ids" position="replace">
                	<field name="may_convert"/>
                	<field name="category"/>
                    <field name="solution"/>
                </field>

                <xpath expr="//page[@string='Lead']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath> 

            </field>
        </record>

    </data>

    <data>
        <record model="ir.ui.view" id="lead_tree">

            <field name="name">lead_tree</field>
            <field name="model">crm.lead</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="arch" type="xml">

                <field name="country_id" position="replace" />

            </field>
        </record>

    </data>

</openerp>
