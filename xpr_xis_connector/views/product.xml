<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE openerp SYSTEM "openerp.dtd">
<openerp>
  <data>
    <!-- Partners -->
    <record id="xis_product_normal_form_view" model="ir.ui.view">
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_normal_form_view"/>
      <field name="arch" type="xml">
        <data>
          <xpath expr="//sheet/notebook/page[@string='Information']/group" position="after">
            <group>
              <field name="xis_product_code"/>
            </group>
          </xpath>
        </data>
      </field>
    </record>
  </data>
</openerp>
