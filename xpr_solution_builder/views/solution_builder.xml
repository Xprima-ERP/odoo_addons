<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	<!-- window action -->
		<record model="ir.actions.act_window" id="action_list_solutions">
			<field name="name">solutions</field>
    		<field name="res_model">xpr_solution_builder.solution</field>
    	</record>

    	<menuitem id="menu_solutions" parent="base.menu_sales" name="Solutions"
			action="action_list_solutions"/>

		<record model="ir.ui.view" id="solution_form_view">

			<field name="name">solution</field>
			<field name="model">xpr_solution_builder.solution</field>
			<field name="arch" type="xml">
				<form string="Definition">
					<sheet>
						<group>
					
							<field name="name"/>
							<field name="description"/>
							<field name="products"/>
							<field name="options"/>
						</group>
					</sheet>
				</form>

			</field>
		</record>

		<record model="ir.ui.view" id="sale_order_form">

			<field name="name">order</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale_stock.view_order_form_inherit"/>
			<field name="arch" type="xml">
				<field name="client_order_ref" position="after">	
					<field name="solution" />
				</field>

				<field name="warehouse_id" position="replace" >
					<field name="warehouse_id" invisible="1"/>
				</field>

				<field name="pricelist_id" position="replace">
					<field name="pricelist_id" invisible="1"/>
				</field>
			</field>
		</record>

		<record model="ir.ui.view" id="product_product_tree_view">

			<field name="name">product.product.tree</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="stock.view_stock_product_tree"/>
			<field name="arch" type="xml">

				<field name="qty_available" position="replace">
					<field name="qty_available" invisible="1"/>
				</field>

				<field name="virtual_available" position="replace">
					<field name="virtual_available" invisible="1"/>
				</field>
				
				<field name="ean13" position="replace">
					<field name="ean13" invisible="1"/>
				</field>
			</field>
		</record>

	</data>
</openerp>
